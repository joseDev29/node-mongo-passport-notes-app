<style>
    .notes-page-title {
        width: 100%;
        margin-top: 30px;
        font-size: 2.8rem;
        text-align: center;
    }

    .notes-container {
        width: 100%;
        display: grid;
        grid-template-columns: 100%;
        margin-top: 30px;
        margin-bottom: 30px;
        padding: 0 10px;
    }

    .note {
        width: 90%;
        min-width: 300px;
        max-width: 400px;
        height: max-content;
        min-height: 250px;
        max-height: 450px;
        overflow-x: hidden;
        overflow-y: auto;
        justify-self: center;
        padding: 0 16px 16px;
        margin-top: 20px;
        border: none;
        border-radius: 4px;
        box-shadow: 0 0 3px 1px rgba(0, 0, 0, 0.1);
        background-color: #fff;

    }

    .note-header {
        width: 100%;
        display: flex;
        justify-content: center;
        padding: 10px 0;
        border-bottom: 1px solid var(--gray-borders);
    }

    .note-edit-icon,
    .note-delete-icon {
        font-size: 2rem;
        color: #fff;
    }

    .note-edit-link,
    .note-delete-btn {
        padding: 5px;
        border-radius: 50%;
        border: solid 1px;
    }

    .note-edit-icon {
        color: #3b89ff;
    }

    .note-delete-icon {
        color: #ff3052;
    }

    .note-edit-link {
        margin-right: 10px;
        border-color: #3b89ff;
        color: #3b89ff;
    }

    .note-delete-btn {
        margin-left: 10px;
        border-color: #ff3052;
        color: #ff3052;
    }

    .note-title {
        padding: 8px 0;
        border-bottom: 1px solid var(--gray-borders);
        font-size: 1.8rem;
        font-weight: 600;
    }

    .note-description {
        padding: 8px 0;
        font-size: 1.4rem;
    }

    .note-title:focus,
    .note-description:focus {
        outline: none;
        border: 1px solid var(--gray-borders);
        border-top: none;
        border-radius: 0.25rem;
    }


    @media (min-width: 740px) {
        .notes-container {
            width: 720px;
            grid-template-columns: repeat(2, calc(50% - 10px));
            column-gap: 20px;
            margin-left: auto;
            margin-right: auto;
        }

        .note {
            width: 100%;
        }
    }

    @media (min-width: 1120px) {
        .notes-container {
            width: 1092px;
            grid-template-columns: repeat(3, calc(100% / 3 - 14px));
            column-gap: 21px;
        }
    }
</style>

<h1 class="notes-page-title">My Notes</h1>

<section class="notes-container">
    {{#each notes}}
    <article class="note">

        <div class="note-header">

            <a href="/notes/edit/{{id}}" class="note-edit-link">
                <span class="material-icons note-edit-icon">
                    edit
                </span>
            </a>
            <a href="" class="note-delete-btn">
                <span class="material-icons note-delete-icon">
                    delete
                </span>
            </a>

        </div>
        <h4 contenteditable="true" class="note-title" id="algo">
            {{title}}
        </h4>
        <input type="text" name="" id="">
        <p contenteditable="true" class="note-description">
            {{description}}
        </p>

    </article>



    {{/each}}
</section>
