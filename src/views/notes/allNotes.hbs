<style>
    .notes-page-title {
        width: 100%;
        margin-top: 30px;
        font-size: 2.8rem;
        text-align: center;
    }

    .notes-container {
        width: 100%;
        display: grid;
        grid-template-columns: 100%;
        margin-top: 30px;
        margin-bottom: 30px;
        padding: 0 10px;
    }

    .note {
        width: 90%;
        min-width: 300px;
        max-width: 400px;
        height: max-content;
        min-height: 250px;
        max-height: 450px;
        overflow-x: hidden;
        overflow-y: auto;
        justify-self: center;
        padding: 0 16px 16px;
        margin-top: 20px;
        border: none;
        border-radius: 4px;
        box-shadow: 0 0 3px 1px rgba(0, 0, 0, 0.1);
        background-color: #fff;

    }

    .note-header {
        width: 100%;
        display: flex;
        justify-content: center;
        padding: 10px 0;
        border-bottom: 1px solid var(--gray-borders);
    }

    .note-edit-icon,
    .note-delete-icon {
        font-size: 2rem;
        color: #fff;
    }

    .note-edit-link,
    .note-delete-btn {
        padding: 5px;
        border-radius: 50%;
        border: solid 1px;
    }

    .note-edit-icon {
        color: #3b89ff;
    }

    .note-delete-icon {
        color: #ff3052;
    }

    .note-edit-link {
        margin-right: 10px;
        border-color: #3b89ff;
        color: #3b89ff;
    }

    .note-delete-btn {
        margin-left: 10px;
        border-color: #ff3052;
        color: #ff3052;
    }

    .note-title {
        padding: 8px 0;
        border-bottom: 1px solid var(--gray-borders);
        font-size: 1.8rem;
        font-weight: 600;
    }

    .note-description {
        padding: 8px 0;
        font-size: 1.4rem;
    }

    .note-title:focus,
    .note-description:focus {
        outline: none;
        border: 1px solid var(--gray-borders);
        border-top: none;
        border-radius: 0.25rem;
    }

    @media (min-width: 740px) {
        .notes-container {
            width: 720px;
            grid-template-columns: repeat(2, calc(50% - 10px));
            column-gap: 20px;
            margin-left: auto;
            margin-right: auto;
        }

        .note {
            width: 100%;
        }
    }

    @media (min-width: 1120px) {
        .notes-container {
            width: 1092px;
            grid-template-columns: repeat(3, calc(100% / 3 - 14px));
            column-gap: 21px;
        }
    }
</style>

<style>
    .note-edit-modal {
        width: 90%;
        max-width: 350px;
        min-width: 300px;
        height: 400px;
        min-height: 400px;
        max-height: 700px;
        padding: 10px;
        border-radius: 0.25rem;
        background-color: #fff;
    }

    .edit-modal-btns {
        width: 100%;
        display: flex;
        justify-content: space-between;
    }

    .edit-modal-save,
    .edit-modal-cancel {
        display: inline-flex;
        justify-content: center;
        width: 48%;
        padding: 8px 0;
        font-size: 1.6rem;
        text-decoration: none;
        border: 1.5px solid;
        border-radius: 2px;
    }

    .edit-modal-save {
        background: none;
        color: #3b89ff;
    }

    .edit-modal-cancel {
        background: none;
        color: #ff3052;
    }

    .edit-modal-title {
        width: 100%;
        padding: 8px 5px;
        margin-top: 10px;
        font-size: 1.8rem;
        border: 0.5px solid var(--gray-borders);
        border-radius: 0.25rem;
    }

    .edit-modal-description {
        width: 100%;
        min-width: 100%;
        max-width: 100%;
        height: 75%;
        min-height: 75%;
        max-height: 75%;
        margin-top: 10px;
        padding: 8px 5px;
        font-size: 14px;
        border: 1px solid var(--gray-borders);
        border-radius: 0.25rem;
        scrollbar-width: thin;
    }

    .edit-modal-description:focus,
    .edit-modal-title:focus {
        outline: none;
        border: 2px solid var(--gray-borders);
    }

    .edit-modal-description::-webkit-scrollbar {
        width: 6px;
        height: 6px;
    }


    .edit-modal-description::-webkit-scrollbar-thumb {
        background-color: #ccc;
        border-radius: 4px;
    }
</style>

<h1 class="notes-page-title">My Notes</h1>

<section class="notes-container">
    {{#each notes}}
    <article class="note" id="note-{{id}}">

        <div class="note-header">

            <a href="" class="note-edit-link" data-note-id="{{id}}" onclick="renderEditNoteForm(event, this)">
                <span class="material-icons note-edit-icon">
                    edit
                </span>
            </a>
            <a href="" class="note-delete-btn" data-note-id="{{id}}" onclick="deleteNote(event, this)">
                <span class="material-icons note-delete-icon">
                    delete
                </span>
            </a>

        </div>
        <h4 class="note-title" id="title-{{id}}">
            {{title}}
        </h4>
        <p class="note-description" id="description-{{id}}">
            {{description}}
        </p>

    </article>



    {{/each}}
</section>
<script src="/js/notesActions.js"></script>