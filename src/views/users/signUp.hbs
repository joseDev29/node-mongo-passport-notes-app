<style>
    .form {
        width: 90%;
        min-width: 300px;
        max-width: 400px;
        margin: 30px auto 0;
        padding: 20px 15px;
        border-radius: 4px;
        box-shadow: 0 0 4px 1px rgba(0, 0, 0, 0.2);
    }

    .form-title {
        width: 100%;
        text-align: center;
        font-size: 2.4rem;
        color: #ff7b00;
    }

    .form-label {
        display: block;
        font-size: 1.3rem;
        margin-top: 15px;
        color: var(--text-color);
    }

    .form-input {
        width: 100%;
        height: 35px;
        margin-top: 5px;
        padding: 0 8px;
        border: none;
        border-radius: 2px;
        background-color: var(--gray-borders);
        color: var(--text-color);
        font-size: 1.5rem;
    }

    .form-btn {
        display: block;
        width: 200px;
        height: 35px;
        margin: 25px auto 0;
        border: none;
        border-radius: 2px;
        background-color: #ff7b00;
        color: #fff;
        font-size: 1.5rem;
        font-weight: 500;
    }
</style>

<form class="form" action="/signup" method="POST">
    <h3 class="form-title">Sign Up</h3>
    <label class="form-label">
        Name
    </label>
    <input type="text" class="form-input" id="signUpName" name="name">
    <label class="form-label">
        Email
    </label>
    <input type="text" class="form-input" id="signUpEmail" name="email">
    <label class="form-label">
        Password
    </label>
    <input type="password" class="form-input" id="signUpPassword" name="password">
    <label class="form-label">
        Confirm Password
    </label>
    <input type="password" class="form-input" id="signUpConfirmPassword" name="confirm_password">

    <button type="submit" class="form-btn" id="signUpBtn">Sign Up</button>
</form>